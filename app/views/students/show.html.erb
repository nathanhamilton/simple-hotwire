<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <div class="max-w-lg w-full bg-white shadow-md rounded-md overflow-hidden">
    <div class="bg-gray-200 px-4 py-2">
      <h1 class="text-lg font-bold text-gray-800">Student Information for
        <%= @student.name %>
      </h1>
    </div>
    <div class="px-4 py-2">
      <p class="text-gray-700 font-medium">Name: <%= @student.name %></p>
      <p class="text-gray-700 font-medium">Email: <%= @student.email %></p>
      <p class="text-gray-700 font-medium">Age: <%= @student.age %></p>
      <p class="text-gray-700 font-medium">Address: <%= @student.address + ', ' + @student.city + ', ' + @student.state + ' ' + @student.zip %></p>
    </div>
    <div class="button">
      <%= button_to student_course_records(@student) %>
    </div>
  </div>
</div>
