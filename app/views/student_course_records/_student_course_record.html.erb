<%= turbo_frame_tag dom_id(student_course_record), action: 'replace', 'data-id': student_course_record.id do %>
  <div class="bg-white rounded-lg shadow-md p-2 mb-5">
    <div class="flex flex-row justify-between">
      <div class="w-5/8 p-2">
        <strong>Order</strong>
        <p class="text-gray-900"><%= student_course_record.order %></p>
      </div>
      <div class="w-5/8 p-2">
        <strong>Name</strong>
        <p class="text-gray-900"><%= student_course_record.course.course_name %></p>
      </div>
      <div class="w-1/8 p-2">
        <strong>Score</strong>
        <p class="text-gray-700"><%= student_course_record.score %></p>
      </div>
      <div class="w-1/8 p-2">
        <strong>Credits</strong>
        <p class="text-gray-700"><%= student_course_record.course.credits %></p>
      </div>
      <div class="w-3/8 p-2">
        <strong>Start date</strong>
        <p class="text-gray-700"><%= student_course_record.start_date %></p>
      </div>
      <div class="w-3/8 p-2">
        <strong>End date</strong>
        <p class="text-gray-700"><%= student_course_record.end_date %></p>
      </div>
      <div class="w-3/8 p-2">
        <strong>Registered at</strong>
        <p class="text-gray-700"><%= student_course_record.registered_at %></p>
      </div>
      <div class="w-3/8 p-2">
        <%= button_to "Delete",
          student_student_course_record_path(@student,
                                             student_course_record),
          action: 'delete', method: :delete,
          data: { confirm: 'Are you sure?' },
          class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
<% end %>
