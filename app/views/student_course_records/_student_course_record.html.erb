<div class="mb-5" data-id="<%= student_course_record.id %>">
  <%= turbo_frame_tag dom_id(student_course_record) do %>
    <div class="bg-white rounded-lg shadow-md p-2">
      <div class="flex flex-row justify-between">
        <div class="w-5/8 p-2">
          <strong>Name</strong>
          <p class="text-gray-900"><%= student_course_record.course.course_name %></p>
        </div>
        <div class="w-1/8 p-2">
          <strong>Score</strong>
          <p class="text-gray-700"><%= student_course_record.score %></p>
        </div>
        <div class="w-1/8 p-2">
          <strong>Credits</strong>
          <p class="text-gray-700"><%= student_course_record.course.credits %></p>
        </div>
        <div class="w-3/8 p-2">
          <strong>Start date</strong>
          <p class="text-gray-700"><%= student_course_record.start_date %></p>
        </div>
        <div class="w-3/8 p-2">
          <strong>End date</strong>
          <p class="text-gray-700"><%= student_course_record.end_date %></p>
        </div>
        <div class="w-3/8 p-2">
          <strong>Registered at</strong>
          <p class="text-gray-700"><%= student_course_record.registered_at %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
